<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tittle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_press"
            android:layout_width="@dimen/length_20"
            android:layout_height="@dimen/length_20"
            android:src="@drawable/backpress_left"
            android:layout_marginTop="@dimen/length_10"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginBottom="@dimen/length_10"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modifyaddress"
            android:textSize="@dimen/size_16"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/length_18"
            android:layout_height="@dimen/length_25"
            android:src="@drawable/dustbin"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/length_10"/>
    </RelativeLayout>

    <View
        android:layout_below="@+id/tittle_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:background="@color/gray"/>

    <include
        android:id="@+id/include"
        layout="@layout/address_include"/>

</LinearLayout>