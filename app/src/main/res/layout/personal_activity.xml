<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
         layout="@layout/title_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:background="@color/gray"/>

    <RelativeLayout
        android:id="@+id/personal_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_70">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personalmsg"
            android:layout_marginLeft="@dimen/length_20"
            android:gravity="center"
            android:textSize="@dimen/size_20"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/length_20"
            android:layout_height="@dimen/length_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/length_10"
            android:src="@drawable/backpress"/>

        <ImageView
            android:layout_width="@dimen/length_30"
            android:layout_height="@dimen/length_30"
            android:layout_toLeftOf="@+id/arrow"
            android:src="@drawable/header"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_10"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:background="@color/gray"/>


    <RelativeLayout
        android:id="@+id/count_safe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_70">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accountsafe"
            android:layout_marginLeft="@dimen/length_20"
            android:gravity="center"
            android:textSize="@dimen/size_20"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/length_20"
            android:layout_height="@dimen/length_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/length_10"
            android:src="@drawable/backpress"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:background="@color/gray"/>

</LinearLayout>