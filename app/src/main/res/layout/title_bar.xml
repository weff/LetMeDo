<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/back_press"
        android:layout_width="@dimen/length_20"
        android:layout_height="@dimen/length_20"
        android:src="@drawable/backpress_left"
        android:layout_marginTop="@dimen/length_20"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginBottom="@dimen/length_20"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tittle"
            android:textSize="@dimen/size_20"
            android:textColor="@color/button_bk"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_18"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/length_10"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/split"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:background="@color/gray"/>
</LinearLayout>