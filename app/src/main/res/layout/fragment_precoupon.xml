<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Realayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/coupon_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="@dimen/length_100"
                android:layout_height="@dimen/length_100"
                android:layout_centerInParent="true"
                android:src="@drawable/coupon_null" />

            <TextView
                android:id="@+id/nocoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/picture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/nocoupon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>