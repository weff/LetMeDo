<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_250"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:id="@+id/bill_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_60"
        android:gravity="center_vertical"
        android:text="订单号：14552154511"
        android:padding="@dimen/length_10"/>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/bill_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:background="@color/gray"/>
     <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
         android:layout_marginLeft="@dimen/length_10"
         android:layout_below="@id/view2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/length_100"/>

    <View
        android:id="@+id/view3"
        android:layout_below="@id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/price_goods"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view3"
        android:layout_marginTop="@dimen/length_10"
        android:textSize="@dimen/size_16"
        android:text="商品总结： ¥99.70"
        android:layout_marginRight="@dimen/length_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/count_goods"
        android:layout_below="@+id/view3"
        android:layout_toLeftOf="@+id/price_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共 2 件"
        android:textSize="@dimen/size_16"
        android:layout_marginTop="@dimen/length_10"
        android:layout_marginRight="@dimen/length_10"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/delete"
        android:background="@drawable/shape_background_button"
        android:layout_marginRight="@dimen/length_10"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/size_16"
        android:layout_width="@dimen/length_80"
        android:layout_height="@dimen/length_40"
        android:text="取消订单"/>

    <Button
        android:id="@+id/pay"
        android:layout_width="@dimen/length_80"
        android:layout_height="@dimen/length_40"
        android:text="@string/pay"
        android:textSize="@dimen/size_16"
        android:layout_toLeftOf="@+id/delete"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_background_button"
        android:layout_marginRight="@dimen/length_10" />


</RelativeLayout>